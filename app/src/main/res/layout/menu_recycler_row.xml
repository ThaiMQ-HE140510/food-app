<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/thumbImage"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/done_food"/>

                <TextView
                    android:id="@+id/menuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken Sandwich"
                    android:layout_marginLeft="7dp"
                    android:textColor="#1c1c1c"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="17sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_dot_1" />
                <TextView
                    android:id="@+id/menuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="6$"/>
                <ImageView
                    android:id="@+id/icRight"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/menuPriceSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5$"
                    android:textSize="16sp"
                    android:textColor="#1c1c1c"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/addToCartButton"
                android:layout_width="160dp"
                android:layout_marginTop="10dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/register_bg_1"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/green_1"
                android:textStyle="bold" />

            <LinearLayout android:id="@+id/addMoreLayout"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="28dp"
                android:orientation="horizontal">

                <ImageView android:id="@+id/imageMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_text_cart"
                    android:src="@drawable/ic_remove"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    app:tint="@color/cl_add_cart" />

                <TextView android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>

                <ImageView android:id="@+id/imageAddOne"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_text_cart"
                    android:src="@drawable/ic_plus_cart"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    app:tint="@color/cl_add_cart" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnDeleteCart"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_delete_1"/>
    <ImageView
        android:id="@+id/btnUpdateCart"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_edit" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline" />
</LinearLayout>

