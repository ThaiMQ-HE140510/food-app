<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntroductionAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_back_black"
            android:paddingLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="HELP CENTER"
            android:textColor="#2e3131"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f7fb"/>

    <TextView
        android:id="@+id/txtAppfood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="FOOD App"
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <TextView
        android:id="@+id/txtTiming"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="Active time of App Food"
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="What is the furthest distance you can order? "
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <TextView
        android:id="@+id/txtDriver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="Can drivers deliver food to your home or office?"
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />

    <TextView
        android:id="@+id/txtRate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="Can I rate an order?"
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <TextView
        android:id="@+id/txtRoute"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_right_nomal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:text="Can I track the driver's route? "
        android:textColor="#2e3131"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
</LinearLayout>