<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f7fb"
    tools:context=".SavedAddressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_back_black"
            android:paddingLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Saved Address"
            android:textColor="#2e3131"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="My Places"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_home"
            android:paddingLeft="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtHone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Home"
                android:textColor="#2e3131"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtAddressHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_company"
            android:paddingLeft="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Company"
                android:textColor="#2e3131"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtAddressCompany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline" />
    <LinearLayout
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/plus"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update new address"
                android:textColor="#2ecc71"
                android:textSize="18sp"
                android:paddingTop="35dp"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</LinearLayout>